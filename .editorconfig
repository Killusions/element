# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js}]
quote_type = single
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# ignore rules
[{projects/element-theme/dist/**,src/assets/typedoc/**,playwright/results/**}]
charset = none
end_of_line = none
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none
